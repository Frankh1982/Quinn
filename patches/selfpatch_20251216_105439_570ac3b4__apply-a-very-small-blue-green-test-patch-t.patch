+            modified = src_text
+
+            try:
+                # Ensure json is imported if not already present.
+                if "import json" not in modified:
+                    lines = modified.splitlines()
+                    inserted = False
+                    for idx, line in enumerate(lines):
+                        if line.startswith("import ") or line.startswith("from "):
+                            continue
+                        # insert import json right before the first non-import, non-empty line
+                        lines.insert(idx, "import json")
+                        inserted = True
+                        break
+                    if not inserted:
+                        lines.append("import json")
+                    modified = "\n".join(lines)
+
